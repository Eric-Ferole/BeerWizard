<div class="container mt-4">
<h1>Beers Index</h1>

 <% @beers.each do |beer| %>


<%= link_to beer_path(beer) do %>
<div class="card-group">
  <div class="card">
    <%= cl_image_tag beer.avatar.key, width: 150, height: 150, crop: :fill, class: "card-img-top center" %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to beer.name, beer_path(beer) %></h5>
      <p class="card-text"><%= beer.description%></p>
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
  </div>
</div>
<% end %>

 <% end %>
<br>
<h1> Users </h1>
<ul>
<% @users.each do |user| %>
<li><%=link_to user.email, user_path(user) %></li>
<% end %>
</ul>
</div>



